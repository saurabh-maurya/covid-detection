<!doctype html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">COVID DETECTION APP</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
                            <div class="text w-100">
                                <h2>Welcome, <%= name %></h2>
                                <p>Take A Covid Detection Test</p>
                                <a href="/takeCovidTest" class="btn btn-white btn-outline-white">Take Test</a>
                            </div>
                        </div>
                        <div class="login-wrap p-4 p-lg-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">User Details</h3>
                                </div>
                            </div>
                            <form action="submit" class="signin-form">
                                <div class="form-group mb-3">
                                    <label class="label" for="name">Full Name</label>
                                    <div id="name"><%= name %></div>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="phone">Phone Number</label>
                                    <div id="phone"><%= phone %></div>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="dob">Date of Birth</label>
                                    <div id="dob"><%= dob %></div>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="address">Location</label>
                                    <div id="address"><%= location %></div>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="label" for="covid_status">Covid Status</label>
                                    <div id="covid"><%= covid_status %></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</body>

</html>